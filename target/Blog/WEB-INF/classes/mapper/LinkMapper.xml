<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.blog.dao.LinkMapper">

<!--    List<Link> getLinks();-->
        <select id="getLinks" resultType="com.blog.pojo.Link">
            select * from t_link
        </select>

        <select id="getLinkById" resultType="com.blog.pojo.Link">
            select * from t_link where id =#{id}
        </select>

<!--    boolean addLink(Link link);-->
        <insert id="addLink" parameterType="com.blog.pojo.Link">
            insert into t_link(id,link_name,link_url,order_no) values (#{id},#{linkName},#{linkUrl},#{orderNo})
        </insert>
<!--    boolean deleteLink(Integer id);-->
        <delete id="deleteLink" >
            delete from t_link where id = #{id}
        </delete>
<!--    boolean updateLink(Link link);-->
        <update id="updateLink" parameterType="com.blog.pojo.Link">
            update t_link set link_name = #{linkName},link_url = #{linkUrl},order_no = #{orderNo} where id = #{id}
        </update>
</mapper>