<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.blog.dao.BloggerMapper">



    <select id="getBloggerByUsername" resultType="com.blog.pojo.Blogger">
        select * from t_blogger where user_name = #{usreName}
    </select>

    <insert id="addBlogger" parameterType="com.blog.pojo.Blogger">
        insert into t_blogger(id,user_name,password,profile,nick_name,sign,image_path)
        values (#{id},#{userName},#{password},#{profile},#{nickName},#{sign},#{imagepath})
    </insert>

    <delete id="deleteBloggerByUsername">
        delete from t_blogger where user_name = #{userName}
    </delete>

    <update id="updateBlogger">
        update t_blogger set id = #{id},user_name = #{userName},password = #{password},
        profile = #{profile},nick_name = #{nickName},sign = #{sign},image_path = #{imagePath}
    </update>

</mapper>